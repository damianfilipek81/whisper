{
  "name": "whisper",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "start": "expo start --dev-client",
    "android": "expo run:android",
    "ios": "expo run:ios",
    "web": "expo start --web",
    "bundle-backend": "npx bare-pack --target ios --target android --linked --out src/app.bundle.mjs backend/index.mjs",
    "bundle-backendv2": "npx bare-pack --target ios --target android --linked --out src/appv2.bundle.mjs backendv2/index.mjs",
    "bundle-backend-ts": "npx esbuild backend/index.ts --bundle --platform=node --format=esm --outfile=backend/build/backend.mjs --external:bare-rpc --external:b4a --external:hypercore-crypto --external:corestore --external:hyperswarm --external:protomux --external:compact-encoding --external:bare-fs --external:bare-path && npx bare-pack --target ios --target android --linked --out backend/build/app.bundle.mjs backend/build/backend.mjs"
  },
  "dependencies": {
    "@react-native-picker/picker": "^2.11.2",
