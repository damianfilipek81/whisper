    "@shopify/flash-list": "^2.1.0",
    "autobase": "^7.19.4",
    "b4a": "^1.7.2",
    "babel-preset-expo": "~54.0.0",
    "bare-crypto": "^1.11.2",
    "bare-fs": "^4.4.5",
    "bare-pack": "^1.4.6",
    "bare-rpc": "^0.2.12",
    "corestore": "^7.4.7",
    "expo": "~54.0.10",
