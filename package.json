    "expo-file-system": "~19.0.15",
    "expo-status-bar": "~3.0.8",
    "hyperbee": "^2.26.5",
    "hyperswarm": "^4.14.0",
    "react": "19.1.0",
    "react-native": "0.81.4",
    "react-native-audio-api": "^0.8.2",
    "react-native-bare-kit": "^0.9.2",
    "react-native-edge-to-edge": "^1.7.0",
